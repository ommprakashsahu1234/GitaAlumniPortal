<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/bootstrap.min.css"> <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="../public/css/styles.css"> <!-- Your custom styles -->
    <title>Register a Complaint</title>
    <style>

        .container {
            margin-top: 50px;
        }

        h2 {
            color: rgb(255, 255, 255);
            margin-bottom: 30px;
        }

        .form-container {
            background-color: #212529;
            border-radius: 15px;
            padding: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-submit {
            margin-top: 20px;
        }

        form {
            color: white;
            background-color: #212529;
        }

        .warn {
            color: red;
        }

        .note {
            color: green;
            font-weight: bold;
        }
    </style>
</head>

<body>

    {{>mainheader}}

    <!-- Complaint Registration Form -->
    <div class="container">
        <h2 class="text-center">Register a Complaint</h2>

        <div class="form-container mx-auto" style="max-width: 600px;">
            <form action="/registercomplaint" method="POST">
                <!-- Complaint Type -->
                <div class="form-group">
                    <label for="complaintType">Select Complaint Type <span class="note">(Select the correct type for
                            better and faster solutions)</span></label>
                    <select class="form-select form-control" id="complaintType" name="complaintType" required>
                        <option value="" disabled selected>Select Type</option>
                        <option value="Account Related">Account Related (For Technical Problems)</option>
                        <option value="Details Related">Details Related (For Problems in Profile details)</option>
                    </select>
                </div>

                <!-- Complaint Title/Reason -->
                <div class="form-group">
                    <label for="complaintTitle">Select Complaint Reason</label>
                    <select class="form-select form-control" id="complaintTitle" name="complaintTitle" required>
                        <option value="" disabled selected>Select Reason</option>
                        <option value="Account Related Issues">Account Related Issues</option>
                        <option value="Operation Fail">Operation Fail</option>
                        <option value="Responsiveness Issues">Responsiveness Issues</option>
                        <option value="Service Downtime">Service Downtime</option>
                        <option value="UI/UX Problems">UI/UX Problems</option>
                        <option value="Technical Glitches">Technical Glitches</option>
                        <option value="Wrong Details fetched">Wrong Details fetched</option>
                        <option value="Want to edit details">Want to edit details</option>
                        <option value="Others">Others</option>
                    </select>
                </div>

                <!-- Complaint Details -->
                <div class="form-group">
                    <label for="complaintDetails">Complaint Details</label>
                    <textarea class="form-control" id="complaintDetails" name="complaintDetails" rows="4"
                        placeholder="Enter your complaint details here..." required></textarea>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary btn-submit">Submit Complaint</button>
                <div id="messages">
                    {{#if success}}
                    <div class="alert alert-success">{{success}}</div>
                    {{/if}}
                    {{#if warn}}
                    <div class="alert alert-warning">{{warn}}</div>
                    {{/if}}
                </div>
            </form>
        </div>
        <div id="messages" style="margin: 15px; ">
            <div style="color: red;" class="alert alert-success text-center">There can be a maximum of 2 active complaints at a time</div>
        </div>
    </div>

    {{> footer}}

    <!-- Bootstrap 5 JS -->
    <script src="../public/js/bootstrap.bundle.js"></script>

</body>

</html>