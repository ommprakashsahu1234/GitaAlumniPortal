<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/bootstrap.min.css"> <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="../public/css/styles.css"> <!-- Your custom styles (if any) -->
    <title>View Complaints</title>
    <style>

        .table-container {
            margin-top: 50px;
            background-color: #212529;
            border-radius: 15px;
            padding: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #343a40;
        }

        .table-striped tbody tr:nth-child(even) {
            background-color: #212529;
        }

        .rounded-table {
            border-radius: 15px;
            overflow: hidden;
        }

        h2 {
            color: rgb(255, 255, 255);
            margin-bottom: 30px;
        }

        @media (max-width: 576px) {

            .table th,
            .table td {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 768px) {
            .table-responsive {
                overflow-x: auto;
            }
        }
    </style>
</head>

<body>
    {{> mainheader}}

    <!-- Complaint Page Content -->
    <div class="container mt-5">
        <h2 class="text-center">Complaint Details</h2>

        <!-- Complaint Table Section -->
        <div class="table-container mx-auto" style="margin: 15px;">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Complaint ID</th>
                            <th>Complaint Type</th>
                            <th>Complaint Title</th>
                            <th>Complaint Details</th>
                            <th>Status</th>
                            <th>Last Responses</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each complaints}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td class="text-wrap">{{this.issuetype}}</td>
                            <td class="text-wrap">{{this.title}}</td>
                            <td class="text-wrap">{{this.complaint}}</td>
                            <td class="text-wrap">{{this.status}}</td>
                            <td class="text-wrap">{{this.response}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {{> footer}}

    <!-- Bootstrap 5 JS -->
    <script src="../public/js/bootstrap.bundle.js"></script>
</body>

</html>