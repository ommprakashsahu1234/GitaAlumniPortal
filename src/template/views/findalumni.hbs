<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="../public/css/bootstrap.min.css"> <!-- Bootstrap 5 CSS -->
    <!-- Your custom styles (styles.css) -->
    <link rel="stylesheet" href="../public/css/styles.css"> <!-- Your custom styles -->
    <title>Find Alumni</title>
    <style>

        .navbar, .form-control, label {
            color: #fff; /* White text for navbar and form controls */
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.7); /* Slightly transparent background */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #ddd; /* Border around the form section */
        }

        .form-container h2 {
            color: #fff;
        }
        h2{
            color:yellow;
        }
        input{
            color: black;
        }
        .form-control {
            color: #000;
           
            background-color: rgba(255, 255, 255, 0.8);
            
        }
        .warn{
            color: red;
        }
    </style>
</head>

<body>

   
        {{>mainheader}}

    <!-- Login Form Content -->
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Find Alumni</h2>

        <!-- Login Form -->
        <div class="form-container mx-auto" style="max-width: 400px;">
            <form action="/alumni" method="POST">
                <!-- Roll No -->
                <div class="mb-3">
                    <label for="rollno" class="form-label">Roll No</label>
                    <input type="text" class="form-control" id="rollno" name="getrollno" required>
                </div>

                <button type="submit" class="btn btn-primary w-100">Find</button>
                <div id="messages">
                    {{#if warn}}
                    <div class="alert alert-warning">{{warn}}</div>
                    {{/if}}
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap 5 JS file -->
    <script src="../public/js/bootstrap.bundle.js"></script> <!-- Bootstrap 5 JS -->
{{>footer}}
</body>

</html>
<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>





