<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/styles.css">
    <title>Alumnis Sorted</title>
    <style>
        .navbar,
        .form-control,
        label {
            color: #fff;
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #ddd;
        }

        .form-container h2 {
            color: #fff;
        }

        h2 {
            color: rgb(255, 255, 255);
        }

        input {
            color: black;
        }

        .form-control {
            color: #000;

            background-color: rgba(255, 255, 255, 0.8);

        }

        .warn {
            color: red;
        }
    </style>
</head>

<body>


    {{>mainheader}}
    <!-- Search Filter Box -->
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="bg-dark text-white p-4 rounded shadow-lg">
                    <h5 class="text-center mb-3" style="color: yellow;">Find Alumni</h5>
                    <form action="/alumnisorted" method="POST">
                        <div class="mb-2">
                            <label for="searchField" class="form-label">Search By</label>
                            <select id="searchField" name="field" class="form-select">
                                <option selected disabled>Filter</option>
                                <option value="cname">Company Name</option>
                                <option value="stype">Service Type</option>
                                <option value="state">State</option>
                                <option value="skill">Skill</option>
                                <option value="batch">Batch</option>
                                <option value="branch">Branch</option>
                                <option value="all">All</option>
                            </select>
                        </div>
                        <div class="mb-2">
                            <input type="text" id="searchValue" name="value" class="form-control"
                                placeholder="Enter search value">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div id="messages">
            {{#if warn}}
            <div class="alert alert-warning">{{warn}}</div>
            {{/if}}
        </div>
    <div class="container mt-5 custom-container" style="max-width: calc(100% - 30px);">
        <div class="table-responsive">
            <table class="table table-dark table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Profile Image</th>
                        <th>Name</th>
                        <th>Roll No</th>
                        <th>Branch</th>
                        <th>Passout Year</th>
                        <th>Skill</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Service Type</th>
                        <th>Company</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>
                            <img src="{{this.profileimg}}" alt="Profile Image" class="img-fluid rounded-circle"
                                style="width: 50px; height: 50px;">
                        </td>
                        <td>{{this.name}}</td>
                        <td>{{this.rollno}}</td>
                        <td>{{this.branch}}</td>
                        <td>{{this.batch}}</td>
                        <td>{{this.skill}}</td>
                        <td>{{#if (eq this.mobno.access "private")}}PRIVATE{{else}}{{this.mobno.mobno}}{{/if}}</td>
                        <td>{{this.mailid}}</td>
                        <td>{{this.address.district}} , {{this.address.state}}</td>
                        <td>{{this.servicetype}}</td>
                        <td>{{this.company}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <script src="../public/js/bootstrap.bundle.js"></script>
    {{>footer}}
</body>

</html>
<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }
</script>