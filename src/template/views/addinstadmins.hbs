<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="../public/css/bootstrap.min.css">
    <!-- Your custom styles (styles.css) -->
    <link rel="stylesheet" href="../public/css/styles.css">
    <title>Add Institution Admins</title>
    <style>

        .navbar,
        .form-control,
        label {
            color: #fff;
            /* White text for navbar and form controls */
        }

        .form-container {
            background-color: rgba(0, 0, 0, 0.7);
            /* Slightly transparent background */
            padding: 30px;
            border-radius: 10px;
            border: 2px solid #ddd;
            /* Border around the form section */
            margin-top: 50px;
        }

        .form-container h2 {
            color: #fff;
            text-align: center;
        }

        h2 {
            color: rgb(255, 255, 255);
        }

        input,
        select {
            color: black;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.8);
        }

        .warn {
            color: red;
        }

        .bg-img {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
            filter: brightness(0.7) blur(0.5px);
        }
    </style>
</head>

<body>

    {{>headadmheader}} <!-- Header (admin) -->

    <!-- Form Section -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="form-container">
                    <h2>Submit Institution Admin Information</h2>
                    <form action="/headadmin/addinstadm" method="POST">
                        <!-- Name Field -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter name" required>
                        </div>

                        <!-- Employee ID Field -->
                        <div class="mb-3">
                            <label for="employeeid" class="form-label">Employee ID</label>
                            <input type="text" class="form-control" name="employeeid"
                                placeholder="Enter Employee ID" required>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password"
                                placeholder="Enter password" required>
                        </div>

                        <!-- Mobile No Field -->
                        <div class="mb-3">
                            <label for="mobile" class="form-label">Mobile No</label>
                            <input type="text" class="form-control" name="mobile" placeholder="Enter mobile number"
                                required>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" placeholder="Enter email address"
                                required>
                        </div>

                        <!-- Remark Field -->
                        <div class="mb-3">
                            <label for="remark" class="form-label">Remark</label>
                            <textarea class="form-control" name="remark" rows="3"
                                placeholder="Enter remarks (optional)"></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </div>
                        <div id="messages">
                            {{#if success}}
                            <div class="alert alert-success">{{success}}</div>
                            {{/if}}
                            {{#if warn}}
                            <div class="alert alert-warning">{{warn}}</div>
                            {{/if}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{>headadminfooter}} <!-- Footer (admin) -->

</body>

</html>